<div id="<%= dom_id contact %>">
  <p>
    <strong>Name:</strong>
    <%= contact.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= contact.email %>
  </p>

  <p>
    <strong>Category:</strong>
    <% if contact.category %>
      <% if contact.category == 0 %>
        <%= "Achieve" %>
      <% elsif contact.category == 1 %>
        <%= "テキスト" %>
      <% elsif contact.category == 2 %>
        <%= " 説明会" %>
      <% elsif contact.category == 3 %>
        <%= "その他" %>
      <% end %>
    <% end %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= contact.content %>
  </p>

</div>
